# MCP Codebase RAG Server Logging Configuration

# Enable debug logging (DEBUG, INFO, WARNING, ERROR)
# This controls both logging verbosity AND MCP tool output detail level:
# - DEBUG: Full diagnostics, performance metrics, internal metadata in MCP tool responses
# - INFO: Standard technical details in MCP tool responses (default)
# - WARNING/ERROR: Minimal output for production AI agent use
MCP_DEBUG_LEVEL=INFO

# Log directory (relative to project root)
MCP_LOG_DIR=logs

# Enable console logging in addition to file logging
MCP_CONSOLE_LOGGING=false

# Enable request tracking for debugging MCP tool chains
MCP_ENABLE_REQUEST_TRACKING=false

# Examples for different debugging scenarios:
#
# For general debugging:
# MCP_DEBUG_LEVEL=DEBUG
# MCP_CONSOLE_LOGGING=true
#
# For multi-modal search debugging:
# MCP_DEBUG_LEVEL=DEBUG
# MCP_ENABLE_REQUEST_TRACKING=true
# MCP_CONSOLE_LOGGING=false
#
# For production monitoring:
# MCP_DEBUG_LEVEL=INFO
# MCP_CONSOLE_LOGGING=false
# MCP_ENABLE_REQUEST_TRACKING=false
